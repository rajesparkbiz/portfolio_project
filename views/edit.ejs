<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Data</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<style>
    .flex-box {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .box {
        border-radius: 10px;
        border: 1px solid black;
    }

    .add-btn {
        height: 35px;
        width: 150px;
        background-color: aquamarine;
        opacity: 0.8;
        align-items: center;
        border-radius: 10px;
    }

    .remove-btn {
        height: 35px;
        width: 150px;
        background-color: crimson;
        opacity: 0.7;
        align-items: center;
        border-radius: 10px;
    }

    .add-btn p {
        text-align: center;
        color: black;
        cursor: pointer;
    }

    .remove-btn p {
        text-align: center;
        color: white;
        cursor: pointer;
    }
</style>

<body>
    <center>
        <h3>Update Your Data</h3>
    </center>

    <div class="container box mt-3 pb-3">
        <form>


            <div class="flex-box">
                <div class="mb-3">
                    <label for="fname" class="form-label">First Name</label>
                    <input type="text" class="form-control" value="<%= data[0].fname%>">
                </div>

                <div class="mb-3">
                    <label for="lname" class="form-label">Last Name</label>
                    <input type="text" class="form-control" value="<%= data[0].lname%>">
                </div>
                <div class="mb-3">
                    <label for="designation" class="form-label">Designation</label>
                    <input type="text" class="form-control" value="<%= data[0].designation%>">
                </div>
            </div>

            <div class="flex-box">

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="text" class="form-control" value="<%= data[0].email%>">
                </div>

                <div class="mb-3">
                    <label for="phone" class="form-label">phone</label>
                    <input type="text" class="form-control" value="<%= data[0].phone%>">
                </div>
                <div class="mb-3">
                    <label for="city" class="form-label">city</label>
                    <input type="text" class="form-control" value="<%= data[0].city%>">
                </div>


            </div>

            <div class="flex-box">



                <div class="mb-3">
                    <label for="address" class="form-label">address</label>
                    <input type="text" class="form-control" value="<%= data[0].address%>">
                </div>

                <div class="mb-3">
                    <label for="zcode" class="form-label">zip code</label>
                    <input type="text" class="form-control" value="<%= data[0].zcode%>">
                </div>


                <div class="mb-3">
                    <label for="perf_location" class="form-label">preferred location</label>
                    <input type="text" class="form-control" value="<%= data[0].perf_location%>">
                </div>




            </div>

            <div class="flex-box">
                <div class="mb-3">
                    <label for="dob" class="form-label">DOB</label>
                    <input type="date" class="form-control" value="<%= data[0].dob%>">
                </div>

                <div class="">
                    <label for="state">State</label>
                    <select name="state" id="state">

                        <% for(let i=0;i< state.length;i++) {%>
                            <option class="dropdown-item" value="<%= state[i].option_value %>">
                                <%= state[i].option_value %>
                            </option>
                            <%}%>

                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-check-label" for="gender">Gender</label>

                    <% for(let i=0;i<gender_type.length;i++) {%>

                        <input class="form-check-input" type="radio" value="
                                      <%= gender_type[i]%>" name="gender" <% if(gender_type[i]==data[0].gender){%>
                        checked
                        <%}else{%>

                            <%}%>
                                >
                                <label class="form-check-label" for="gender">
                                    <%= gender_type[i]%>
                                </label>

                                <%}%>
                </div>
            </div>

            <div class="flex-box">


                <div class="mb-3">
                    <label for="department" class="form-label">Department</label>
                    <input type="text" class="form-control" value="<%= data[0].department%>">
                </div>

            </div>


        </form>
    </div>


    <div class="container box mt-3 pb-3">
        <div class="add-btn mt-3">
            <p class="pt-1">Add Education</p>
        </div>
        <% for(let i=0;i<acadamic.length;i++){%>
            <div class="flex-box">
                <div class="mb-3">
                    <label for="department" class="form-label">Course Name</label>
                    <input type="text" class="form-control" value="<%= acadamic[i].course_name%>">
                </div>
                <div class="mb-3">
                    <label for="department" class="form-label">Name of Board</label>
                    <input type="text" class="form-control" value="<%= acadamic[i].education_board%>">
                </div>
                <div class="mb-3">
                    <label for="department" class="form-label">Passing Year</label>
                    <input type="text" class="form-control" value="<%= acadamic[i].education_year%>">
                </div>
                <div class="mb-3">
                    <label for="department" class="form-label">Percentage</label>
                    <input type="text" class="form-control" value="<%= acadamic[i].education_grade%>">
                </div>
                <div class="remove-btn mt-3">
                    <p class="pt-1">Delete</p>
                </div>
            </div>
            <%}%>

    </div>

    <div class="container box mt-3 pb-3">
        <div class="add-btn mt-3">
            <p class="pt-1">Add Experience</p>
        </div>
        <% for(let i=0;i<experience.length;i++){%>
            <div class="flex-box">
                <div class="mb-3">
                    <label for="department" class="form-label">Company Name</label>
                    <input type="text" class="form-control" value="<%= experience[i].company_name%>">
                </div>
                <div class="mb-3">
                    <label for="department" class="form-label">Designation</label>
                    <input type="text" class="form-control" value="<%= experience[i].candidate_position%>">
                </div>
                <div class="mb-3">
                    <label for="department" class="form-label">Joinning Date</label>
                    <input type="text" class="form-control" value="<%= experience[i].candidate_joining%>">
                </div>
                <div class="mb-3">
                    <label for="department" class="form-label">Leaving Date</label>
                    <input type="text" class="form-control" value="<%= experience[i].candidate_leaving%>">
                </div>
                <div class="remove-btn mt-3">
                    <p class="pt-1">Delete</p>
                </div>
            </div>
            <%}%>
    </div>

    <div class="container box mt-3 pb-3">
        <div class="add-btn mt-3">
            <p class="pt-1">Add reference</p>
        </div>
        <% for(let i=0;i<reference.length;i++){%>
            <div class="flex-box">
                <div class="mb-3">
                    <label for="department" class="form-label">Person Name</label>
                    <input type="text" class="form-control" value="<%= reference[i].person_name%>">
                </div>
                <div class="mb-3">
                    <label for="department" class="form-label">Person Number</label>
                    <input type="text" class="form-control" value="<%= reference[i].person_contact%>">
                </div>
                <div class="mb-3">
                    <label for="department" class="form-label">Relation</label>
                    <input type="text" class="form-control" value="<%= reference[i].person_relation%>">
                </div>
                <div class="remove-btn mt-3">
                    <p class="pt-1">Delete</p>
                </div>
            </div>
            <%}%>


    </div>

    <div class="container box mt-3 pb-3" style="display: flex; justify-content: space-between;">

        <div>
            <p class="m-3">Languages</p>
            <%for(let i=0;i<laanguage.length;i++){%>
                <div class="m-3">
                    <input class="form-check-input" type="checkbox" name="<%= laanguage[i].language_name %>r"
                        value="yes">
                    <label class="me-3" for="<%= laanguage[i].language_name %>r">
                        <%= laanguage[i].language_name %>
                    </label>
                    <input class="form-check-input" type="checkbox" name="<%= laanguage[i].language_name %>r"
                        value="yes">
                    <label class="me-2" for="<%= laanguage[i].language_name %>r">Read</label>

                    <input class="form-check-input" type="checkbox" name="<%= laanguage[i].language_name %>s"
                        value="yes">
                    <label class="me-2" for="<%= laanguage[i].language_name %>s">Speak</label>

                    <input class="form-check-input" type="checkbox" name="<%= laanguage[i].language_name %>w"
                        value="yes">
                    <label class="me-2" for="<%= laanguage[i].language_name %>w">Write</label>

                </div>
                <%}%>
        </div>

        <div>
            <p class="m-3">Technology</p>
            <% for(let i=0;i<technology.length;i++){%>
                <div class="m-3">
                    <input class="form-check-input" type="checkbox" name="<%= technology[i].technology_name %>r"
                        value="yes">
                    <label class="me-3" for="<%= technology[i].technology_name %>r">
                        <%= technology[i].technology_name %>
                    </label>
                    <input class="form-check-input" type="radio" name="<%= technology[i].technology_name %>r"
                        value="yes">
                    <label class="me-2" for="<%= technology[i].technology_name %>r">Benginner</label>

                    <input class="form-check-input" type="radio" name="<%= technology[i].technology_name %>s"
                        value="yes">
                    <label class="me-2" for="<%= technology[i].technology_name %>s">Mediator</label>

                    <input class="form-check-input" type="radio" name="<%= technology[i].technology_name %>w"
                        value="yes">
                    <label class="me-2" for="<%= technology[i].technology_name %>w">Expert</label>

                </div>
                <%}%>
        </div>

    </div>

    <div class="container box mt-3">
        <div class="flex-box">
            <div class="mb-3">
                <label for="notice_peroid" class="form-label">Notice Peroid</label>
                <input type="text" class="form-control" name="notice_peroid" value="<%= data[0].notice_peroid%>">
            </div>

            <div class="mb-3">
                <label for="expacted_ctc" class="form-label">Expacted CTC</label>
                <input type="text" name="expacted_ctc" class="form-control" value="<%= data[0].expacted_ctc%>">
            </div>
            <div class="mb-3">
                <label for="current_ctc" class="form-label">Current CTC</label>
                <input type="text" name="current_ctc" class="form-control" value="<%= data[0].current_ctc%>">
            </div>
            <button type="submit" class="add-btn"
            style="color: black;border: none; background-color: rgb(49, 186, 190); opacity: 0.8;">Update Data</button>
        </div>
    </div>
    
    <div class="submit-btn container-fluid mt-2">
       
    </div>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>

</html>